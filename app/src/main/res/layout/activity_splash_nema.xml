<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".Activity_Splash_Nema">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/easyGifView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88a1fb"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoSplash"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:src="@drawable/logonemayman" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/logoSplash"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        app:mpb_indeterminateTint="@color/ProgressBarLoadingColor" />

    <TextView
        android:id="@+id/txtTryAgainSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:text="@string/txtTryAgain" />

</RelativeLayout>